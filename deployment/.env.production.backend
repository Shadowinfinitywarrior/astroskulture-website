# Backend Production Environment Variables
# Copy this file to backend/.env on your VPS server
# Replace all placeholder values with your actual production credentials

# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/astroskulture?retryWrites=true&w=majority

# JWT Secret (Generate a strong random secret)
JWT_SECRET=YOUR_STRONG_RANDOM_SECRET_HERE_USE_OPENSSL_RAND_BASE64_32

# Razorpay Configuration (Production Keys)
RAZORPAY_KEY_ID=rzp_live_RgHCMPiF6byxqC
RAZORPAY_KEY_SECRET=YOUR_RAZORPAY_SECRET_KEY

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# CORS Configuration
CORS_ORIGIN=https://astroskulture.in

# Admin Configuration
ADMIN_EMAIL=admin@astroskulture.in

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=YOUR_SESSION_SECRET_HERE

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
